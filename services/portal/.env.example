# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=matatu_wifi
MYSQL_USER=matatu_user
MYSQL_PASSWORD=your_secure_password
MYSQL_HOST=mysql
MYSQL_PORT=3306

# RADIUS Configuration
RADIUS_SECRET=your_radius_secret
RADIUS_NAS_IDENTIFIER=matatu-wifi-nas
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# Portal Configuration
PORTAL_PORT=3000
NODE_ENV=production
SESSION_SECRET=your_session_secret
JWT_SECRET=your_jwt_secret

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Ad Service Configuration
AD_SERVICE_PORT=5000
FLASK_ENV=production
FLASK_SECRET_KEY=your_flask_secret
MAX_AD_SIZE_MB=100
ALLOWED_VIDEO_FORMATS=mp4,webm,ogg

# MikroTik Configuration
MIKROTIK_IP=192.168.88.1
MIKROTIK_USER=admin
MIKROTIK_PASSWORD=your_mikrotik_password

# WiFi Settings
WIFI_SESSION_DURATION_MINUTES=15
WIFI_BANDWIDTH_LIMIT_MBPS=2
AD_DURATION_SECONDS=30

# System Settings
TZ=Africa/Nairobi
LOG_LEVEL=info
BACKUP_RETENTION_DAYS=30

# Monitoring
GRAFANA_ADMIN_PASSWORD=your_grafana_password
PROMETHEUS_RETENTION_DAYS=15

# External Services (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Analytics
GOOGLE_ANALYTICS_ID=
MATOMO_SITE_ID=

# Domain Configuration
DOMAIN_NAME=wifi.matatu.local
SSL_ENABLED=false